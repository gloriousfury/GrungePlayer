<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fifty"
    android:background="@color/app_white_smoke">

    <ImageView
        android:id="@+id/shuffle_image"
        android:layout_width="@dimen/thirty"
        android:layout_height="@dimen/thirty"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/five"
        android:src="@drawable/ic_shuffle_pink_24dp" />

    <TextView
        android:id="@+id/shuffle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginTop="@dimen/ten"
        android:layout_toRightOf="@+id/shuffle_image"
        android:text="Shuffle Play"
        android:textColor="@color/colorPrimary"

        />

    <ImageView
        android:id="@+id/img_more_queue"
        android:layout_width="@dimen/thirty"
        android:layout_height="@dimen/thirty"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_more_vert_pink_24dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shuffle_title"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_toRightOf="@+id/shuffle_image"
        android:text="All Tracks"
        android:textColor="@color/grey"
        android:textSize="11sp"

        />

</RelativeLayout>
