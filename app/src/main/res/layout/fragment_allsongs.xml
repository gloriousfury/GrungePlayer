<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="3dp"-->
            <!--android:background="@color/white_ash"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:background="@color/app_white_smoke"
            >

            <ImageView
                android:id="@+id/shuffle_image"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/ic_shuffle_pink_24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/five"
                />

            <TextView
                android:id="@+id/shuffle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/shuffle_image"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:text="Shuffle Play"

                />

            <ImageView
                android:id="@+id/img_more_queue"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/ic_more_vert_pink_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_toRightOf="@+id/shuffle_image"
                android:layout_below="@id/shuffle_title"
                android:textSize="11sp"
                android:layout_marginLeft="@dimen/twenty"
                android:text="All Tracks"

                />

        </RelativeLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            >


        </android.support.v7.widget.RecyclerView>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />



    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
