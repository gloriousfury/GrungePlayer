<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seventy"
    android:clickable="true"

    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white">

        <ImageView
            android:id="@+id/song_background"
            android:layout_width="@dimen/seventy"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:layout_toRightOf="@id/song_background"
            android:text="Passenger"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/song_title"
            android:layout_width="@dimen/seventy"
            android:layout_height="wrap_content"
            android:layout_below="@id/artist"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:layout_toRightOf="@id/song_background"
            android:text="Let Her Go"
            android:textSize="13sp"
            android:maxLines="1"


            />


        <ImageView
            android:id="@+id/img_fast_foward"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ten"
            android:src="@drawable/ic_fast_forward_black_24dp" />


        <ImageView
            android:id="@+id/img_play_pause"
            android:layout_width="@dimen/fourty"
            android:layout_height="@dimen/fourty"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_toLeftOf="@id/img_fast_foward"
            android:src="@drawable/ic_play_circle_filled_white_black_24dp" />


        <ImageView
            android:id="@+id/img_rewind"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_toLeftOf="@id/img_play_pause"
            android:src="@drawable/ic_fast_rewind_black_24dp" />


    </RelativeLayout>


</LinearLayout>